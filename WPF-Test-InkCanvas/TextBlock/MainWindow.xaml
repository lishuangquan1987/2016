<Window x:Class="TextBlock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Name="tb" ></TextBlock>
        <RichTextBox Name="rb" Margin="0,0,0,00" Grid.Row="1"  ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"></RichTextBox>
        <Button Content="Button" HorizontalAlignment="Left" Margin="84,71,0,0" VerticalAlignment="Top" Width="75" Name="btn" Click="btn_Click"/>
    </Grid>
</Window>
